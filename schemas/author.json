                {
                  "name": "iconText",
                  "title": "Icon Text",
                  "type": "text"
                },
                {
                  "name": "platform",
                  "title": "Plattform",
                  "type": "enum",
                  "options": [
                    "Android",
                    "iOS",
                    "Windows",
                    "Linux",
                    "MacOS",
                    "Sonstiges"
