{
    "name":"decision",
    "title":"Entscheidung",
    "type":"object",
    "initialValue":{
        "relevance":50
    },
    "fields":[
        {
            "name":"question",
            "title":"Frage",
            "required":true,
            "type":"reference",
            "to":[
                {
                    "type":"question"
                }
            ]
        },
        {
            "name":"agreement",
            "title":"Grad der Zustimmung",
            "type":"array",
            "required":true,
            "of":[
                {
                    "type":"number"
                }
            ],
            "options":{
                "list":[
                    {
                        "title":"Nein",
                        "value":-1
                    },
                    {
                        "title":"Neutral",
                        "value":0
                    },
                    {
                        "title":"Ja",
                        "value":1
                    },
                    {
                        "title":"Ja!!!",
                        "value":2
                    }
                ]
            }
        },
        {
            "name":"relevance",
            "title":"Relevanz (0 = egal, 100 = notwendig)",
            "type":"number",
            "required":true,
            "min":0,
            "max":100
        },
        {
            "name":"crucial",
            "title":"Hinreichend / Notwendig",
            "type":"boolean",
            "initialValue":false
        }
    ],
    "preview":{
        "select":{
            "title":"question.title",
            "subtitle":"relevance",
            "media":"question.poster"
        }
    }
}